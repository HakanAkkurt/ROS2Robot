<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4" main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="9" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <RateController hz="1">
          <ComputePathToPose goal="{goal}" planner_id="GridBased" path="{path}" />
        </RateController>
        <FollowPath controller_id="FollowPath" path="{path}" />
      </PipelineSequence>
      
      <Sequence name="AckermannRecovery">
        <Wait wait_duration="2.0" />
        <BackUp backup_dist="0.5" backup_speed="0.15" />
        <Wait wait_duration="1.0" />
      </Sequence>
    </RecoveryNode>
  </BehaviorTree>
</root>